create or replace package body array189
as
procedure rotate(p_var in out abcd, k in out number)
as
p pls_integer := 1;
z pls_integer;
l pls_integer;
m pls_integer;
E_EdgeCase exception;
begin
z:= p_var.count;
if(z < 2)
then
raise E_edgeCase;
end if;
k := mod(k,2);
l := z-k;
m := z-k +p;
revers(p_var,p,l);
revers(p_var,m, z);
revers(p_var,p,z);
for i in 1..p_var.count
loop
dbms_output.put_line(p_var(i));
end loop;
exception
when e_edgecase
then
dbms_output.put_line('Edge Case ..!');
when others then
dbms_output.put_line(dbms_utility.format_error_backtrace());
end;
procedure revers(p_var in out abcd, i in out number, j in out number)
as
l_temp pls_integer:=0;
begin
while (i < j)
loop
l_temp := p_var(i);
p_var(i) := p_var(j);
p_var(j) := l_temp;
i := i+ 1;
j := j - 1;

end loop;
end;
end;
