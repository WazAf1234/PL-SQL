create or replace function factiter(a in number)
return number
as
e_edgecase exception;
e_invalid exception;
fac number :=1;
begin
if(a = 0 OR a =1)
then
raise e_edgecase;
end if;
if(a < 0)
then
raise e_invalid;
end if;

for i in 1..a
loop

fac := fac * i;
end loop;
return fac;
exception
when e_invalid
then
dbms_output.put_line('Invalid');
return 0;
when e_edgecase
then
dbms_output.put_line('Edge case');
return 1;
when others
then
dbms_output.put_line(dbms_utility.format_error_backtrace());
dbms_output.put_line(SQLCODE || SQLERRM);
return -1;
end;

