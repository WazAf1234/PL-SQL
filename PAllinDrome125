create or replace function pallindrome125 (a in varchar2)
return boolean
as
l pls_integer:=1;
h pls_integer;
k varchar2(1000);
begin
select lower(replace(a,' ','')) into k from dual;
h := length(k);
while(l < h)
loop
if(substr(k,l,1) <> substr(k,h,1))
then
return FALSE;
else
l := l + 1;
h := h - 1;
end if;
end loop;
RETURN TRUE;
end;




---> Capturing Boolean Values returned from the Pallindrome Function

declare
p boolean;
ll varchar2(1000);
j varchar2(100);
begin
IF(pallindrome125('   asD  d   s a ') = TRUE) THEN
dbms_output.put_line('TRUE');
ELSE
dbms_output.put_line('FALSE');
END IF;
end;
